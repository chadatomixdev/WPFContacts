<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="textboxName" Margin="0,0,0,5"/>
            <TextBox x:Name="textboxEmail" Margin="0,0,0,5"/>
            <TextBox x:Name="textboxPhoneNumber" Margin="0,0,0,5"/>
            <Button Content="Save" x:Name="buttonSave" Click="buttonSave_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
